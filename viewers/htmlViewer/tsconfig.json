{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES5",
        "lib": [
            "ES2017",
            "DOM"],
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true, 
        "allowJs": false,
        "outDir": "public/modules",
        //"rootDirs": ["./src"],
        //"baseUrl": ".",
    },
    "include": [
        "./src/*"
    ]
}